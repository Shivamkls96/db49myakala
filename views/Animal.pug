extends layout

block content
  h1= title
  - let o;
  - let items = results; 
  
  script.
    function buy(x){
      alert('Purchased Item: ' + x)
   } 
  
  div(class='container-fluid')
    div(class='row')
      each o, index in items 
        div(class="card text bg-success mb-3 text-white" class='row' class='card' class='card-body')
        div(class='col-sm-3' onclick='buy('+index+')') #{o}
        a(href = "Animal/detail/?id=" + o._id) detail 
        a(href = "Animal/update/?id=" + o._id) update
        a(href = "Animal/delete/?id=" + o._id) delete
